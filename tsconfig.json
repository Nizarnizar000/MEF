{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // ðŸ‘‡ These two let TS coexist with JS
    "allowJs": true,
    "checkJs": false,

    // ðŸ‘‡ Optional, helps if using paths like "@/components/ui/button"
    // "baseUrl": "src",
    // "paths": {
    //   "@/*": ["*"]
    // }
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
